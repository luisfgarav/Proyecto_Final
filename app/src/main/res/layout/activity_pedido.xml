            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Fecha llegada:  En proceso"
            android:id="@+id/apedidosfechal"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Total: "
            android:id="@+id/apedidostotal"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
